map -count h <count>gT
map -count l <count><C-n>
map -builtin <C-h> h
" map -builtin <C-h> h
map -builtin <C-l> l
" vmap -builtin -count h <count><left>
" vmap -builtin -count l <count><right>
" imap jj <esc>
" cmap jj <esc>

